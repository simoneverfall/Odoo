                <ul>
                    <li>Date: <t t-esc="object.date_order.strftime('%Y-%m-%d')"/></li>
                    <li>Time: <t t-esc="object.write_date.strftime('%H:%M:%S')"/></li>
                    <li>Staff Member: <t t-esc="object.user_id.name"/></li>
                    <li>Client Name <t t-esc="object.partner_id.name"/></li>
                    <li>Client Address: <t t-esc="object.partner_id.street"/> <t t-esc="object.partner_id.city"/> <t t-esc="object.partner_id.state_id.name"/> <t t-esc="object.partner_id.zip"/> <t t-esc="object.partner_id.country_id.name"/></li>
                </ul>
            </field>
        </record>
        <record id="email_template_invoice_confirmation" model="mail.template">
            <field name="name">Sales Order invoice Confirmation</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="subject">Order Invoice - {{object.partner_id.name}}</field>
            <field name="email_from">{{(object.user_id.email or 'noreply@example.com')}}</field>
            <field name="partner_to">{{ object.case_manager_id.id }}</field>
            <field name="auto_delete" eval="False"/>
