<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_project_document_form_inherited" model="ir.ui.view">
        <field name="name">project.task.form.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority">33</field>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='date_deadline']" position="after">
                <field name="sale_order_ref" string="Sale order" readonly="1"/>
            </xpath>

            <xpath expr="//field[@name='description']" position="replace">
                <field name="sale_description" invisible="not sale_description"/>
                <field name="description" type="html" options="{'collaborative': true, 'resizable': false}" placeholder="Add details about this task..." invisible="sale_description"/>
            </xpath>

            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="provider_id" readonly="1"/>
            </xpath>
        </field>
    </record>

