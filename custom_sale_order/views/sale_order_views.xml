                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'only_name': True}"
                       placeholder="Type to find a customer..."
                       readonly="state in ['cancel', 'sale']"/> -->
            <!-- Now Making This As Client Delivery Address CHANGED!!!!!-->
            <!-- IT MUST BE CASE MANAGER-->
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id"
                       string="Case Manager"
                       widget="many2one"
                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'only_name': True}"
