    <record id="custom_sale_order_project_task_view_inherit" model="ir.ui.view">
        <field name="name">custom.sale.order.project.task.view.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_project.view_order_form_inherit_sale_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_project_ids']" position="replace">
                <button type="object" name="action_view_project_ids" class="oe_stat_button" icon="fa-puzzle-piece" invisible="1" groups="project.group_project_user">
                    <field name="project_count" widget="statinfo" string="Projects"/>
                </button>
            </xpath>

            <xpath expr="//button[@name='action_view_task']" position="replace">
                <button type="object" name="action_view_task" class="oe_stat_button" icon="fa-check" invisible="1" groups="project.group_project_user">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Tasks</span>
                        <span class="o_stat_value">
                            <field name="closed_task_count"/> / <field name="tasks_count"/>
                            (<field name="completed_task_percentage" widget="percentage" options="{'digits': [1, 0]}"/>)
                        </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="custom_sale_order_sale_timesheet_view_order_form_inherit" model="ir.ui.view">
        <field name="name">custom.sale.order.sale.timesheet.view.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_timesheet.view_order_form_inherit_sale_timesheet"/>
        <field name="arch" type="xml">
            
