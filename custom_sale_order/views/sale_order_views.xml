<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Form View customizations -->
    <record id="sale_order_inherited_form_everfall" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.everfall</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="context">{'show_address': 1}</attribute>
                <attribute name="string">Case Manager</attribute>
            </xpath>

            
            <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                <attribute name="string">Provider</attribute>

            </xpath>
            <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="project_id" readonly="1"/>
                <field name="x_state_custom"/>
            </xpath>

            <!-- Previous Logic  -->
            <!-- <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id"
                       string="Case Manager"
                       widget="many2one"
                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'only_name': True}"
                       placeholder="Type to find a customer..."
                       readonly="state in ['cancel', 'sale']"/> -->
            <!-- Now Making This As Client Delivery Address -->
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_id"
                       string="Delivery Address"
                       widget="many2one"
                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True, 'only_name': True}"
                       placeholder="Type to find a customer..."
                       readonly="state in ['cancel', 'sale']"/>

            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Client Photos">
                    <field name="client_photo_ids" widget="many2many_binary" string="Attach a Photo"/>
                </page>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="provider_id" />
                <field name="case_manager_id" readonly="state == 'cancel' or locked" context="{'show_address': 1}"/>
            </xpath>
        </field>
    </record>

    <!--    list View customizations -->
    <record id="sale_order_inherited_list_everfall" model="ir.ui.view">
        <field name="name">sale.order.inherited.list.everfall</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="x_state_custom" widget="badge" decoration-info="x_state_custom == 'booked' or x_state_custom == 'approved'" decoration-warning="x_state_custom == 'hold'" decoration-primary="x_state_custom == 'awaiting_approval' or x_state_custom == 'no_quote_required'" decoration-danger="x_state_custom == 'cancelled'" decoration-success="x_state_custom == 'complete'"/>
            </xpath>
            <xpath expr="//field[@name='validity_date']" position="replace">
            </xpath>
<!--            <xpath expr="//field[@name='create_date']" position="before">-->
<!--            </xpath>-->

            <xpath expr="//field[@name='state']" position="after">
<!--                <field name="task_id" />-->
                     <button name="action_open_task_calendar"
                        string="View TaskğŸ“…"
                    type="object"
                    class="btn-link"
                />
            </xpath>
            <xpath expr="//field[@name='create_date']" position="before">
                <field name="client_name" string="Client Name"/>
                <field name="details" string="Address"/>
                <field name="suburb"/>

<!--                attrs="{'invisible': [('task_id','=',False)]}"-->

                <!--                <field name="provider_name"/>-->
            </xpath>
            <!-- OLD LOGIC -->
            <!-- <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'only_company': True}</attribute>
                <attribute name="string">Case Manager</attribute>
            </xpath> -->

            <!-- new logic -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="optional">hide</attribute>
                <attribute name="string">Client Company</attribute>
            </xpath>

            <!-- OLD Logic -->

            <!-- <xpath expr="//field[@name='partner_id']" position="before">
                <field name="partner_invoice_id" string="Provider" context="{'only_company': True}"/>
            </xpath> -->

            <!-- New Logic -->
             <xpath expr="//field[@name='partner_id']" position="before">
                <field name="provider_id"/>
             </xpath>

             <!-- New Logic -->
        </field>
    </record>
</odoo>