<odoo>
    <template id="report_invoice_document_inherit_client_photos"
              inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='payment_term']" position="after">
            <t t-if="o.client_photo_ids">
                <div style="margin-top:20px;">
                    <t t-foreach="o.client_photo_ids" t-as="client_photo" t-foreach-index="i">
                        <div style="width:100%; height:800px; text-align:center; vertical-align:middle; page-break-before:always; border:none">
                                <div style="vertical-align:middle; text-align:center;">
                                    <img t-att-src="'data:image/png;base64,%s' % client_photo.datas.decode()"
                                         style="max-width:850px; max-height:800px;"/>
                                </div>
                        </div>
                    </t>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
