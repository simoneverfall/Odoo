<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_mps" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.mrp.mps</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//group[@name='group_standard_price']/field[@name='supplier_taxes_id']" position="before">
                <field name="margin_percent" string="Margin %" />
            </xpath>
        </field>
    </record>
</odoo>